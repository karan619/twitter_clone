<% provide(:title, "Home")%>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
    <div class="well">
    	<h3>Tweet feed</h3>
    	<%= render 'shared/feed' %>
    </div>
    </div>
  </div>
<% else %>
<div id="homejumbo" class="jumbotron text-center">
	<h2>Welcome to TweetPosts</h2>
  <p>Sign Up and start following the people around you <em><font size="3">- Karan Valecha</font></em></p>
<%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-default" %>
</div>
  
<% end %>
