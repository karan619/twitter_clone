<% provide(:title, "Home")%>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
    <div class="well">
    	<h3>Tweet feed</h3>
    	<%= render 'shared/feed' %>
    </div>
    </div>
  </div>
<% else %>
<div class="jumbotron">
	<h1>Welcome to TweetScope </h1>
</div>
  
<%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary" %>
<% end %>
