<%= form_for((@micropost), html: { multipart: true }) do |f| %>
  <%= render 'shared/errors', object: f.object %>
  <div class="form-group">
    <%= f.text_area :content, placeholder: "#{ pluralize(current_user.microposts.count, "Tweet") }", class: 'form-control' %>
  </div>
  <span class="row form-group">
  <div class="col-md-10 btn">
  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </div>
  <div class="col-md-2">
  <%= f.submit "Post", class: "btn btn-primary" %>
  </div>
  </span>
<% end %>
<script type="text/javascript">
	$('#micropost picture').bind('change', function(){
		var MB = this.files[0].size/1024/1024;
		if(MB > 5){
			alert("maximum file size is 5MB");
		}
	});
</script>