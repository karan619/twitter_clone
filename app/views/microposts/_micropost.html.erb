<li class="list-group-item panel">
	<div class="panel-heading row">
	<%= link_to gravatar_for(micropost.user, size: 40), micropost.user, class: 'col-md-1' %>
		  <h4 class="col-md-11"><%= link_to micropost.user.name, micropost.user %>
	    <em class="label pull-right" style="color:cyan"> posted <%= time_ago_in_words(micropost.created_at) %> ago. </em>
  </div>
	<div class="panel-body">
		  <p><%= micropost.content %></p>
		  <%= image_tag  micropost.picture.url if micropost.picture? %>
	    <% if current_user?(micropost.user) %>
		  <hr/>
	      <%= link_to "delete", micropost, method: :delete,
	                                       data: { confirm: "You sure?" }, class: 'btn btn-sm btn-danger pull-right' %>
       <% end %>
  </div>
</li>