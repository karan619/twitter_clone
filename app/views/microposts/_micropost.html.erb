<li class="list-group-item panel">
	<div class="panel-heading row">
	<%= link_to gravatar_for(micropost.user, size: 40), micropost.user, class: 'col-md-1' %>
		  <h4 class="col-md-5"><%= link_to micropost.user.name, micropost.user %></h4>
		  <font class="col-md-5" color="silver" size="2">Posted <%= time_ago_in_words(micropost.created_at) %> ago!</font>
	    <% if current_user?(micropost.user) %>
	      <%= link_to micropost, method: :delete,
	                                       data: { confirm: "You sure?" }, class: 'col-md-1' do %> <i class="fa fa-trash-o fa-lg fa-w text-danger"></i>
	                                       <% end %><% end %>

  </div>
	<div class="panel-body">
		  <p><%= micropost.content %>
		  <%= image_tag  micropost.picture.url if micropost.picture? %></p>
  </div>
</li>